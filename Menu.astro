<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Preload images for better performance
    const images = document.querySelectorAll(".cs-image img");
    images.forEach(img => {
      const src = img.getAttribute("src");
      const newImg = new Image();
      newImg.src = src;
    });

    // Smooth scrolling to section when Pre-Order Now button is clicked
    const preOrderButton = document.querySelector(".cs-button-solid");
    preOrderButton.addEventListener("click", function(event) {
      event.preventDefault();
      const sectionId = this.getAttribute("href").substring(1);
      const section = document.getElementById(sectionId);
      if (section) {
        section.scrollIntoView({ behavior: "smooth" });
      }
    });
  });
</script>


